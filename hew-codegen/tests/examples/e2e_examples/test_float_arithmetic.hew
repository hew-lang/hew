fn test_float_comparisons() -> int {
    let lt = if 1.5 < 2.5 {
        1
    } else {
        0
    };
    let gt = if 3.0 > 2.0 {
        1
    } else {
        0
    };
    let le = if 2.0 <= 2.0 {
        1
    } else {
        0
    };
    let ge = if 3.0 >= 2.5 {
        1
    } else {
        0
    };
    let ne = if 1.0 != 2.0 {
        1
    } else {
        0
    };
    if lt == 1 {
        if gt == 1 {
            if le == 1 {
                if ge == 1 {
                    if ne == 1 {
                        println("PASS: test_float_comparisons");
                        1
                    } else {
                        println("FAIL: test_float_comparisons");
                        0
                    }
                } else {
                    println("FAIL: test_float_comparisons");
                    0
                }
            } else {
                println("FAIL: test_float_comparisons");
                0
            }
        } else {
            println("FAIL: test_float_comparisons");
            0
        }
    } else {
        println("FAIL: test_float_comparisons");
        0
    }
}

fn test_float_negation() -> int {
    let x: f64 = 5.0;
    let neg = -x;
    if neg == -5.0 {
        println("PASS: test_float_negation");
        1
    } else {
        println("FAIL: test_float_negation");
        0
    }
}

fn test_float_complex_expr() -> int {
    let result = (2.0 + 3.0) * 4.0 - 1.0;
    if result == 19.0 {
        println("PASS: test_float_complex_expr");
        1
    } else {
        println("FAIL: test_float_complex_expr");
        0
    }
}

fn main() -> int {
    println("=== Test: Float Arithmetic ===");
    var passed = 0;
    let total = 7;
    passed = passed + test_float_add();
    passed = passed + test_float_sub();
    passed = passed + test_float_mul();
    passed = passed + test_float_div();
    passed = passed + test_float_comparisons();
    passed = passed + test_float_negation();
    passed = passed + test_float_complex_expr();
    println("");
    print("Passed: ");
    println(f"{passed}/{total}");
    if passed == total {
        0
    } else {
        1
    }
}
