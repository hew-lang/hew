// Test: GCD and LCM (Euclidean algorithm)
// Exercises: Recursion, arithmetic, modulo
fn gcd(a: int, b: int) -> int {
    if b == 0 {
        a
    } else {
        gcd(b, a % b)
    }
}

fn lcm(a: int, b: int) -> int {
    a / gcd(a, b) * b
}

fn main() -> int {
    println("=== GCD and LCM ===");
    print("gcd(12, 8) = ");
    println(gcd(12, 8));
    print("gcd(100, 75) = ");
