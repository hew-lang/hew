fn test_bool() -> i32 {
    let flag: bool = true;
    let other: bool = false;
    let r1 = if flag {
        1
    } else {
        0
    };
    let r2 = if other {
        0
    } else {
        1
    };
    if r1 == 1 {
        if r2 == 1 {
            println("PASS: bool");
            1
        } else {
            0
        }
    } else {
        0
    }
}

fn test_var_mutation() -> i32 {
    var counter: i32 = 0;
    counter = counter + 1; // 1
    counter += 10; // 11
    counter -= 1; // 10
    counter *= 3; // 30
    if counter == 30 {
        println("PASS: var mutation + compound assignment");
        1
    } else {
        0
    }
}

fn test_let_immutable() -> i32 {
    let x = 42;
    // x = 10; // would be compile error: immutable binding
    if x == 42 {
        println("PASS: let immutable");
        1
    } else {
