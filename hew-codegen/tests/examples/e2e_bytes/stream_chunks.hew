import std::fs;
import std::stream;
import std::os;

fn main() {
    let tmp = os.temp_dir();
    let path = tmp + "/hew_chunk_test.txt";
    unsafe { hew_file_write(path, "abcdefghijklmno"); }

    let raw = match stream.from_file(path) {
        Ok(s) => s,
        Err(e) => { panic(e); },
    };
    let chunked = raw.chunks(5);

    var count: int = 0;
    for await chunk in chunked {
        println(chunk);
        count = count + 1;
    }
    println(count);
}
