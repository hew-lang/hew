actor Accumulator {
    let total: int;
    let count: int;

    receive fn add(x: int) {
        self.total = self.total + x;
        self.count = self.count + 1;
    }

    receive fn print_result() {
        println(self.total);
        println(self.count);
    }
}

fn main() {
    let acc = spawn Accumulator(total: 0, count: 0);
    acc.add(10);
    acc.add(20);
    acc.add(30);
    acc.print_result();
    sleep_ms(200);
}
