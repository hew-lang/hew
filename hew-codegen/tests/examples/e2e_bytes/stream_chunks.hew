import std::fs;
import std::stream;

fn main() {
    unsafe { hew_file_write("/tmp/hew_chunk_test.txt", "abcdefghijklmno"); }

    let raw = match stream.from_file("/tmp/hew_chunk_test.txt") {
        Ok(s) => s,
        Err(e) => { panic(e); },
    };
    let chunked = raw.chunks(5);

    var count = 0;
    for await chunk in chunked {
        println(chunk);
        count = count + 1;
    }
    println(count);
}
