    }
}

fn test_type_inference() -> i32 {
    let a = 100; // inferred i32
    let b = "inferred"; // inferred String
    let c = true; // inferred bool
    if a == 100 {
        println("PASS: type inference");
        1
    } else {
        0
    }
}

