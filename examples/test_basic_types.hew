// Test: Basic Types and Variables
// Exercises: i32, f64, String, bool, let/var, compound assignment, arithmetic
fn test_integers() -> i32 {
    let x: i32 = 42;
    let y: i32 = -10;
    let sum = x + y; // 32
    let diff = x - y; // 52
    let prod = x * 2; // 84
    let div = x / 7; // 6
    let modulo = x % 10; // 2
    if sum == 32 {
        if diff == 52 {
            if prod == 84 {
                if div == 6 {
                    if modulo == 2 {
                        println("PASS: integers");
                        1
                    } else {
                        0
                    }
                } else {
                    0
                }
            } else {
                0
            }
        } else {
            0
        }
    } else {
        0
    }
}

