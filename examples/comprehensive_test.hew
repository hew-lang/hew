// === Test 4: While Loops with Break and Continue ===
fn test_while_loops() -> i32 {
    var i = 0;
    var sum = 0;
    var found_five = 0;
    while i < 10 {
        if i == 3 {
            i = i + 1;
            continue;
        }
        if i == 5 {
            found_five = 1;
        }
        if i == 8 {
            break;
        }
        sum = sum + i;
        i = i + 1;
    }
    // Should skip 3, break at 8: sum = 0+1+2+4+5+6+7 = 25
    if sum == 25 {
        if found_five == 1 {
            1
        } else {
            0
        }
    } else {
        0
    }
}

