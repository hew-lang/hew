// Test: Float Arithmetic
// Exercises: f64 addition, subtraction, multiplication, division,
// comparisons, negation, and complex expressions
fn test_float_add() -> int {
    let a: f64 = 2.5;
    let b: f64 = 3.5;
    let result = a + b;
    if result == 6.0 {
        println("PASS: test_float_add");
        1
    } else {
        println("FAIL: test_float_add");
        0
    }
}

