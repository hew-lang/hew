import std::fs;
import std::stream;

fn main() {
    unsafe { hew_file_write("/tmp/hew_pipe_test.txt", "alpha\nbeta\ngamma"); }

    let source = match stream.from_file("/tmp/hew_pipe_test.txt") {
        Ok(s) => s,
        Err(e) => { panic(e); },
    };
    let dest = match stream.to_file("/tmp/hew_pipe_out.txt") {
        Ok(s) => s,
        Err(e) => { panic(e); },
    };
    stream.pipe(source, dest);

    let result = unsafe { hew_file_read("/tmp/hew_pipe_out.txt") };
    println(result);
}
