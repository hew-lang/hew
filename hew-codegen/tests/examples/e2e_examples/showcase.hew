    // 5. Fibonacci
    println("5. Fibonacci:");
    let f10 = fib(10);
    println(f"  fib(10) = {f10}");

    // 6. Error handling
    println("6. Error handling:");
    let r1 = divide(10, 3);
    let r2 = divide(10, 0);
    println(f"  divide(10,3) = {r1}");
    println(f"  divide(10,0) = {r2}");

    // 7. String basics
    println("7. String basics:");
    let name = "Hew";
