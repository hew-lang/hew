import std::stream;

fn main() {
    // Create a bounded channel
    let (sink, input) = stream.channel(8);

    // Write using method syntax â€” no manual size needed
    sink.write("hello");
    sink.write("world");
    sink.close();

    // Read using for-await until EOF
    for await item in input {
        println(item);
    }
    input.close();
}
