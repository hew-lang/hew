// Test: Two Sum (LeetCode #1)
// Exercises: HashMap lookup, iteration, function returns
fn two_sum(nums: Vec<int>, target: int) -> int {
    let seen: HashMap<String, int> = HashMap::new();
    var i: int = 0;
    var found = 0;
    let len = nums.len();
    while i < len {
        let num = nums.get(i);
        let complement = target - num;
        // Build key from complement
        // Since HashMap uses string keys, we use index tracking
        var j: int = 0;
        while j < i {
            let other = nums.get(j);
            if num + other == target {
                print("Found pair at indices ");
                print(j);
                println(f" and {i}");
                found = 1;
            }
            j = (j + 1) as int;
        }
        i = (i + 1) as int;
    }
    found
}

